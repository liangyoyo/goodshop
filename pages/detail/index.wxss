/* pages/detail/index.wxss */
.container swiper{
  height: 700rpx;
}
.container swiper .slide-image{
  display: block;
  height: 100%;
  margin: 0 auto;
}
.detail .detail-price{
  font-size: 18px;
  color: red;
  margin: 30rpx 0 30rpx 20rpx;
}
.detail .detail-desc{
  display: flex;
  justify-content: space-between;
  font-size: 16px; 
}
.detail .collection{
  width: 150rpx;
  color:rgb(112, 109, 109);
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}
.detail .detail-name{
  width: 600rpx;
  margin: 0 0rpx 20rpx 20rpx;
  border-right: 1px solid #ddd;
   overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.freight{
  margin: 0 0 20rpx 20rpx;
  font-size: 14px;
  color: rgb(112, 109, 109);
}
.button{
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  height: 100rpx;
  z-index: 99
}
.addcart text{
  color: red;
  margin-left: 50rpx;
}
.button .button-left{
  width: 20%;
  font-size:14px; 
  color:rgb(112, 109, 109);
}
.button .button-right{
  width: 30%;
  background-color: #f4b73f;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}
.button .button-right2{
  width: 30%;
  background-color:#eb4450;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}
