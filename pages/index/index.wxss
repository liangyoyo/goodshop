.container{
  padding-top:100rpx; 
}
.search {
  padding:20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #ff2d4a;
  z-index: 99;
}
.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:14px;
  color: #666;
  background: #fff;
  border-radius: 4px;
}
.search-input icon{
  margin-right:10rpx; 
}
.slide-image{
  width: 750rpx;
  height: 340rpx;
}
.menus{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}
.menus image{
  width: 128rpx;
  height: 140rpx;
}
.floor-title image{
  width:100%;
  height:60rpx;
}
.floor-content{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.floor-content-left image{
  width:232rpx;
  height:386rpx;
}
.floor-content-right{
  flex:1;
  margin-left:5rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap; 
}
.floor-content-right image{
  width: 233rpx;
  height: 188rpx;
}