.container{
  position: absolute;
  top: 100rpx;
  bottom: 0;
  width: 100%;

}
.search {
  padding:20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #ff2d4a;
  z-index: 99;
}
.search-input {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:14px;
  color: #666;
  background: #fff;
  border-radius: 4px;
}
.search-input icon{
  margin-right:10rpx; 
}
.main{
position: relative;
display: flex;
justify-content: space-between;
height: 100%
}
.navs{
  width: 200rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #f6f6f6;
   overflow: scroll;

}
.navs-item{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
  box-sizing: border-box;
  font-size: 14px;
  color: #666;
}

.navs .active{
  color:red;
  background:#fff;
  position: relative;
}
.navs .active::before{
  display: block;
  content: "";
  width:4px;
  height: 60rpx;
  background: red;
  position: absolute;
  top:20rpx;
  left: 0;
}
.categorys{
  position: absolute;
  left: 200rpx;
  right:0;
  height: 100%;
   overflow: scroll;
   flex: 1;
   padding: 20rpx;
   box-sizing: border-box;

}
.categorys-title{
  text-align: center;
  margin: 20rpx 0;
   color:#666;
}
.categorys-list{
  display: flex;
  flex-wrap: wrap;
  color:#666;
}
.categorys-item{
  width:33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size:12px;
  color:#666;
  margin-bottom: 10rpx;
}

.categorys-item image{
  width: 120rpx;
  height: 120rpx;
}
.categorys-item > view{
  width:100%;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}