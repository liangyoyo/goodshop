.search{
background: #eee;
padding: 20rpx;
}
.search-input{
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 100%;
  font-size: 14px;
  background: #fff;
  border-radius: 4px;
}
.search-input icon{
  margin-left:20rpx; 
}
.goods-title{
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  align-items: center;
  border-bottom:1px solid #ddd;
  font-size: 14px; 
}
.goods-title .active{
  color: red;
}
.goods-list-item{
  display: flex;
  border-bottom:1px solid #ddd; 
  justify-content: space-between;
}
.goods-list-item .goods-images{
 flex-shrink:0;
  height:240rpx;
  width: 260rpx; 
}
.goods-list-content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 14px;
  padding: 34rpx 0;
  margin-left:20rpx; 

}
.goods-desc{
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-price{
  color: red;
}
.goods-price text{
  font-size: 20px;
}